<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginRegister.Reset_Password_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="246dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check your email"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Kami telah mengirimkan  instruksi pemulihan \n kata sandi ke email Anda."
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/dark_grey"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/openEmailBtn"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:text="Open email app"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_primary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lewatiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lewati, nanti saya konfirmasi"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/podkova_regular"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textAlignment="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak menerima email?  Mohon periksa filter
             spam pada email Anda."
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/dark_grey"/>

    </LinearLayout>

</LinearLayout>